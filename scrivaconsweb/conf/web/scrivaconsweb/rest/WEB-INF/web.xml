<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee web-app_3_0.xsd">

      <session-config>
          <cookie-config>
             <http-only>true</http-only>
             <secure>true</secure>
          </cookie-config>
          <tracking-mode>COOKIE</tracking-mode>
      </session-config>

	<listener>
		<listener-class>it.csi.scriva.scrivaconsweb.util.AppServletContextListener</listener-class>
   	</listener>

	<!-- resteasy -->
   <listener>
      <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
   </listener>
   
	<listener>
      <listener-class>org.jboss.resteasy.plugins.spring.SpringContextLoaderListener</listener-class>
   </listener>
   
	<listener>
    	<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
   	</listener>

	<!-- Richiesto affinche' il controllo sulle sessioni concorrenti funzioni nel modo corretto -->
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>

	<filter>
		<filter-name>encoding-filter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

 <filter>
        <filter-name>IrideIdAdapterFilter</filter-name>
        <filter-class>it.csi.scriva.scrivaconsweb.filter.IrideIdAdapterFilter</filter-class>
        <init-param>
            <param-name>devmode</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>IrideIdAdapterFilter</filter-name>
        <url-pattern>/api/v1/secure/*</url-pattern>
        <!--  <url-pattern>*</url-pattern> -->
    </filter-mapping>

   <!-- genera errori da sistemare -->
   <filter>
		<filter-name>RedirectFilter</filter-name>
		<filter-class>it.csi.scriva.scrivaconsweb.filter.RedirectFilter</filter-class>
   </filter>
  <filter-mapping>
		<filter-name>RedirectFilter</filter-name>
		<url-pattern>*</url-pattern>
   </filter-mapping>  
	<error-page>
     <!-- Uncaught exception -->
           <error-code>404</error-code>
           <location>/index.html</location>
    </error-page>

	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.scan.providers</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.scan.resources</param-name>
		<param-value>false</param-value>
	</context-param>
	
	<welcome-file-list>
	  	<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	 
	<!-- duplicazione sessione -->
    <distributable />	
    
</web-app>
